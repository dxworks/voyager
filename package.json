    "@types/node": "^25.0.10",
    "@types/semver": "^7.7.1",
    "@types/string-template": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@yao-pkg/pkg": "^6.12.0",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "json": "^11.0.0",
