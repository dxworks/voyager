  "files": [
    "dist"
  ],
  "engines": {
    "node": "^24.13.0"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json && npm run copy-files",
    "clean": "rimraf dist && rimraf --glob \\\"*.tsbuildinfo\\\"\"",
    "clean:modules": "rm -rf ./node_modules package-lock.json",
    "copy-files": "cpy \"src/assets/**/*\" \"dist/assets\" --parents",
    "create": "npm run build && npm run test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "local": "npm run build && npm link && npx dx-voyager --help",
    "refresh": "rm -rf ./node_modules package-lock.json && npm install",
    "test": "jest --passWithNoTests",
    "test:dev": "jest --watch",
    "package": "npm run build && pkg . --output bin"
  },
  "dependencies": {
    "@dxworks/cli-common": "^0.1.1",
    "@dxworks/ktextensions": "^0.1.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
